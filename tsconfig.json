{
  "compilerOptions": {
    "target": "ES2020", // The target JavaScript version
    "module": "ES6", // Use ES6 module syntax
    "outDir": "./dist", // Directory for compiled JavaScript files
    "rootDir": "./src", // Directory containing your TypeScript source files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skip type checking of all declaration files
    "forceConsistentCasingInFileNames": true, // Ensures that casing is consistent in imports
    "moduleResolution": "node", // Module resolution strategy
    "resolveJsonModule": true, // Allows importing JSON files
    "noEmitOnError": true // Do not emit output if there are errors
  },
  "include": [
    "src/**/*.ts" // Include all TypeScript files in the src directory
  ],
  "exclude": [
    "node_modules", // Exclude node_modules directory
    "dist" // Exclude the output directory
  ]
}
